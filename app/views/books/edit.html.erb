<main>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <p id="notice"></p>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                <h1>Editing Book</h1>

                  <%= form_with model: @book do |f| %>
                    <div class="form-group">
                        <label for="book_title">Title</label><br>
                        <%= f.text_field :title, autofocus: true, id:"book_title", class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <label for="book_body">Opinion</label><br>
                        <%= f.text_field :body, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.submit "Update Book", class: "btn btn-success" %>
                    </div>
                  <% end %>
                <tr><%= link_to "Show", book_path(@book.id) %></tr>
                <tr>|</tr>
                <tr><%= link_to "Back", books_path %></tr>
            </div>
        </div>
    </div>
</main>