<main>
  <%= flash[:notice] %>
  <div class="container px5 px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @book.image.attached? %>
          <%= image_tag @book.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
	            <th>name</th>
	            <th><%= current_user.name %></th>  <!-- ここのname部分をcurrent_userになるようにしないといけない !-->
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= current_user.self_introduction %></th>       <!-- ここもnameと同view様、current_userのintroductionになるようにしないと　!-->
            </tr>
          </tbody>
        </table>
        <div class="row">
          <!-- ここにユーザー情報を編集するページに飛ぶリンクアイコン　!-->
          <%= link_to edit_user_url(current_user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fa fa-user-cog fa-w-20"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <div class="form-group">
          <%= form_with model: Book.new do |f| %>
            <label for="book_title">Title</label><br>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
            <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
          <% end %>
      </div>
      <div class="col-md-8 offeset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %><br>
                  <%= image_tag @book.user.get_profile_image(100, 100) %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <%= link_to "Edit", edit_book_url(@book.id), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>