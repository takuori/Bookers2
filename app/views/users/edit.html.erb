<main>
    <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
    <p id="notice"></p>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                <h1>User info</h1>
                <div class="form-group">
                  <%= form_with model: @user do |f| %>
                    <label for="user_name">Name</label><br>
                    <%= f.text_field :name, autofocus: true, id:"user_name", class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="user_image">Image</label><br>
                  <%= f.file_field :profile_image, accept: "image/*" %>
                </div>
                <div class="form-group">
                    <label for="user_introduction">Introduction</label><br>
                    <%= f.text_field :introduction, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.submit "Update User", class: "btn btn-secondary" %>
                </div>
                  <% end %>
            </div>
        </div>
    </div>
</main>
